<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuMedecinActivity">


<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:layout_editor_absoluteX="16dp"
tools:layout_editor_absoluteY="-115dp">

    <TextView
        android:id="@+id/tvdoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:background="#00BCD4"
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Cabinet Dr. Souabni"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:drawableTintMode="multiply" />

<ImageView
    android:id="@+id/ivdoc"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    app:srcCompat="@drawable/doctor2" />

    <TextView
        android:id="@+id/tvnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="145dp"
        android:text="Khaoula Souabni"
        android:textColor="#A3020202"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvspec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="144dp"
        android:text="Médecin généraliste"
        android:textColor="#60020202"
        android:textSize="14sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnpatients"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:text="Patients"
        android:textIsSelectable="false"
        android:textSize="15sp"
        app:backgroundTint="#8BC34A"
        app:icon="@drawable/users"
        app:iconGravity="textStart"
        app:iconPadding="3dp"
        app:iconSize="35dp"
        app:iconTint="#F3EFEF"
        android:onClick="BtnPatient"
        />

    <Button
        android:id="@+id/btnrdv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:isScrollContainer="false"
        android:text="Rendez-vous"
        android:textSize="14dp"
        app:backgroundTint="#673AB7"
        app:icon="@drawable/calendar"
        app:iconGravity="textStart"
        app:iconPadding="3dp"
        app:iconSize="35dp" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

    <Button
        android:id="@+id/btnNotes"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:text="Notes"
        android:textIsSelectable="false"
        android:textSize="15sp"
        app:backgroundTint="#DFFF5722"
        app:icon="@drawable/notebook"
        app:iconGravity="textStart"
        app:iconPadding="3dp"
        app:iconSize="35dp" />

    <Button
        android:id="@+id/btndex"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:onClick="deconnexion"
        android:text="Déconnexion"
        android:textSize="13sp"
        app:backgroundTint="#00BCD4"
        app:icon="@drawable/logout2"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:iconSize="35dp" />
</LinearLayout>


</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>